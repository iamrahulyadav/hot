<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginRight="@dimen/margin_right"
    android:layout_height="match_parent"
    tools:context="com.hotactress.hot.activities.RegisterActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/register_logo"
                android:layout_marginTop="@dimen/margin_top_big"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher"/>

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_display_name"
                android:hint="Enter display name"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_below="@id/register_logo"
                android:inputType="text"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Chat"
                android:backgroundTint="@color/colorPrimary"
                android:layout_below="@id/register_display_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/register_sign_up"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
