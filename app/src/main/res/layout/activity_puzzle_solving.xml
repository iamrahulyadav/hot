<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PuzzleSolvingActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/puzzle_activity_share_layout_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/puzzle_activity_image_2_0"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toStartOf="@+id/puzzle_activity_image_1_0"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_activity_image_1_0" />

        <ImageView
            android:id="@+id/puzzle_activity_image_1_0"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toStartOf="@+id/puzzle_activity_image_0_0"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_activity_image_0_0" />

        <ImageView
            android:id="@+id/puzzle_activity_image_2_1"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_image_2_0"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_activity_image_1_1" />

        <ImageView
            android:id="@+id/puzzle_activity_image_1_1"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_image_1_0"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_activity_image_0_1" />

        <ImageView
            android:id="@+id/puzzle_activity_image_2_2"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/cross"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_image_2_1"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_activity_image_1_2" />

        <ImageView
            android:id="@+id/puzzle_activity_image_1_2"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_image_1_1"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_activity_image_0_2" />

        <ImageView
            android:id="@+id/puzzle_activity_image_0_0"
            android:layout_width="96dp"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/puzzle_activity_image_0_1"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_image_0_0"
            app:layout_constraintTop_toTopOf="@+id/puzzle_activity_image_0_0" />

        <ImageView
            android:id="@+id/puzzle_activity_image_0_2"
            android:layout_width="@dimen/puzzle_square_size"
            android:layout_height="@dimen/puzzle_square_size"
            android:layout_marginStart="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_image_0_1"
            app:layout_constraintTop_toTopOf="@+id/puzzle_activity_image_0_1" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/puzzle_activity_original_image_id"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dummy" />

    <Button
        android:id="@+id/puzzle_activity_reset_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Reset"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/puzzle_activity_solve_button_id"
        app:layout_constraintStart_toEndOf="@+id/puzzle_activity_reset_initial_id" />

    <Button
        android:id="@+id/puzzle_activity_reset_initial_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/puzzle_activity_solve_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:text="Solve"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/puzzle_activity_share_layout_id"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/puzzle_activity_reset_initial_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id='@+id/puzzle_activity_download_button_id'
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/puzzle_activity_whatsapp_button_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/white_download" />

        <ImageView
            android:id="@+id/puzzle_activity_whatsapp_button_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/puzzle_activity_share_button_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_download_button_id"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whatsapp" />

        <ImageView
            android:id="@+id/puzzle_activity_share_button_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/puzzle_activity_whatsapp_button_id"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/share_square" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="मेरी फोटो की पहेली को पूरा करें ,  पहेली पूरा करने के बाद आप फोटो डाउनलोड व शेयर कर सकेंगे "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/puzzle_activity_original_image_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Solve puzzle to see, download and share my Photo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/puzzle_activity_original_image_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>